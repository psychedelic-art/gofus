{
  "name": "gofus-game-server",
  "version": "1.0.0",
  "description": "The GOFUS Game Server is the stateful, real-time component of the hybrid architecture that handles:\r - Real-time gameplay (movement, combat, interactions)\r - WebSocket connections for live game state\r - AI-driven NPCs and combat intelligence\r - Map state management and synchronization\r - Multi-server orchestration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec tsx src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.61.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.7",
    "redis": "^5.9.0",
    "socket.io": "^4.8.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  }
}

# Server Configuration
NODE_ENV=development
PORT=3001
GAME_SERVER_ID=gs-001
REGION=us-east-1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/gofus
DIRECT_URL=postgresql://user:password@localhost:5432/gofus

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-secret-key-here
API_URL=http://localhost:3000

# Game Configuration
MAX_PLAYERS_PER_MAP=50
TICK_RATE=20
SAVE_INTERVAL=300000
COMBAT_TIMEOUT=120000
MAP_INSTANCE_TIMEOUT=600000
AI_UPDATE_INTERVAL=100

# Performance Settings
MAX_CONNECTIONS=5000
WORKER_THREADS=4
USE_CLUSTERING=false

# Monitoring
METRICS_PORT=9090
LOG_LEVEL=info
LOG_FILE=game-server.log

# Security
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
MAX_PACKET_SIZE=1024

# Development Settings
DEBUG=false
ENABLE_HOT_RELOAD=true